<p id="notice"><%= notice %></p>

<h1>Tweet Templates</h1>

<table>
  <thead>
    <tr>
      <th>Tweet day</th>
      <th>Message</th>
      <th>Link(TweetId)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweet_templates.each do |tweet_template| %>
      <tr>
        <td><%= tweet_template.tweet_day %></td>
        <td><%= tweet_template.message %></td>
        <td><%= tweet_template.link %></td>
        <td><%= link_to 'Show', [:admin, tweet_template] %></td>
        <td><%= link_to 'Edit', edit_admin_tweet_template_path(tweet_template) %></td>
        <td><%= link_to 'Destroy', [:admin, tweet_template], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet Template', new_admin_tweet_template_path %>
