<p id="notice"><%= notice %></p>

<h1>Rewards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Rate</th>
      <th>ImageUrl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.name %></td>
        <td><%= reward.description %></td>
        <td><%= reward.rate %></td>
        <td><%= reward.image_url %></td>
        <td><%= link_to 'Show', [:admin, reward] %></td>
        <td><%= link_to 'Edit', edit_admin_reward_path(reward) %></td>
        <td><%= link_to 'Destroy', [:admin, reward], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reward', new_admin_reward_path %>
